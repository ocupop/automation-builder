{
  "name": "flowise-auth",
  "version": "1.0.0",
  "description": "Authentication system for Flowise",
  "scripts": {
    "test": "jest",
    "test:unit": "jest tests/aws tests/gcp",
    "test:integration": "jest tests/integration",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage"
  },
  "dependencies": {
    "@google-cloud/firestore": "^6.0.0",
    "@google-cloud/tasks": "^4.0.0",
    "aws-sdk": "^2.1000.0",
    "axios": "^1.6.0",
    "nodemailer": "^6.9.0"
  },
  "devDependencies": {
    "jest": "^29.0.0",
    "aws-sdk-mock": "^5.8.0",
    "@types/jest": "^29.0.0",
    "jest-junit": "^16.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "./coverage",
    "collectCoverageFrom": [
      "terraform/aws/lambda/**/*.js",
      "terraform/gcp/functions/**/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "reporters": [
      "default",
      ["jest-junit", {
        "outputDirectory": "./test-results",
        "outputName": "junit.xml",
        "classNameTemplate": "{filepath}",
        "titleTemplate": "{title}"
      }]
    ]
  }
}
